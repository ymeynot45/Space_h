<title>New Game Information</title> 
<fieldset>
	<legend align="center">Game Information</legend>
	<form action="/games" method="POST" name="New Game Info">
		<label for="game_name">Game Name:</label>   <input type="text" name="game_name" id="game_name">
		<br>
		<label for="number_of_players">Number of Players:</label>    	
		<select align="5">
			<option>2</option>
			<option>3</option>
			<option>4</option>
		</select><br>
		<label for="game_size">Game Size:</label>    	
		<select align="5">
			<option>Tiny</option>
			<option>Small</option>
			<option>Normal</option>
			<option>Large</option>
			<option>Huge</option>
		</select><br>
		<input type='submit' value="Let's do this!" id="start_game">
	</form><br>
</fieldset><br>